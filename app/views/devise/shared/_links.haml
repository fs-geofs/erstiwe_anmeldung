
%ul{class:"inline-list"}
  - if devise_mapping.registerable? && controller_name != 'registrations'
    %li
      = link_to "Ticket einlösen", new_registration_path(resource_name)

  -if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
    %li
      = link_to "Passwort vergessen?", new_password_path(resource_name) 

  - if devise_mapping.confirmable? && controller_name != 'confirmations'
    %li
      = link_to "Keine Bestätigungsmail erhalten?", new_confirmation_path(resource_name) 

  - if controller_name != 'sessions'
    %li
      = link_to "Einloggen", new_session_path(resource_name)
      um Daten zu ändern