<!DOCTYPE html>
<html>
<head>
  <title>ErstiweAnmeldung</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
 <body>
    <div id="container">
      <%- flash.each do |name, msg| -%>
        <%= content_tag :div, msg, id: "flash_#{name}" if msg.is_a?(String) %>
      <%- end -%>

      <% if user_signed_in? -%>
        <div id="user_login_box" style="float:right">
          <%= current_user.email %> <%= "(admin)" if current_user.admin? %> |
          <% if current_user.admin? %>
            <%= link_to 'Liste der Anmeldungen', users_list_path %> |
            <%= link_to 'Tickets ausdrucken', tickets_print_path %> |
          <% else %>
            <%= link_to 'My info', edit_user_registration_path %> |
          <% end %>
          <%= link_to 'Sign out', destroy_user_session_path, method: :delete %>
        </div>
      <% end -%>

      <div style="clear:both"></div>
      <%= yield %>
    </div>
  </body>
</html>
