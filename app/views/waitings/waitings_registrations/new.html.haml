-if AppConfig.first.waiting_list_open == true
  %div{class:"row"}
    %div{class:"small-9 large-centered columns"}
      %h2 Auf der Warteliste eintragen

  %div{class:"row"}
    %div{class:"small-6 large-centered columns"}
      %p Bla text

  = form_for(resource, :as => resource_name, :url => registration_path(resource_name), html:{class:"custom"}) do |f|

    %div{class:"row"}
      %div{class:"small-6 small-centered columns"}
        = f.label :email
        = f.email_field :email, class: error_class_for_resource(:email)
        - resource_errors(:email)
            

    %div{class:"row"}
      %div{class:"small-6 small-centered columns"}
        = f.submit "Ticket einl√∂sen", class: "button expand radius success"

- else
  %div{class:"row"}
    %div{class:"small-9 large-centered columns"}
      %h2 Die Warteliste ist geschlossen.